swift_update_packages(
    name = "update_pkgs",
    gazelle = "//:gazelle_bin",
    package_manifest = "swift/Package.swift",
    swift_deps = "swift/deps.bzl",
    swift_deps_index = "swift/deps_index.json",
    update_bzlmod_use_repo_names = True,
