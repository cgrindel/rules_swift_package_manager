load("@build_bazel_rules_swift//swift:swift.bzl", "swift_test")

config_setting(
    name = "macos_os",
    constraint_values = [
        "@platforms//os:osx",
    ],
)

swift_test(
    name = "AppTests",
    srcs = glob(["*.swift"]),
    # Workaround for missing libswift_Concurrency.dylib
    # https://forums.swift.org/t/swift-concurrency-back-deploy-issue/53917/10
    linkopts = select({
        ":macos_os": [
            "-Wl",
            "-weak-lswift_Concurrency",
            "-Wl",
            "-rpath",
            "/usr/lib/swift",
        ],
        "//conditions:default": [],
    }),
    module_name = "AppTests",
    deps = ["@swiftpkg_vapor//:Sources_XCTVapor"],
)
