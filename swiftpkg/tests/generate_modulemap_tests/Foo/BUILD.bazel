load("@cgrindel_bazel_starlib//bzlformat:defs.bzl", "bzlformat_pkg")
load("@rules_cc//cc:defs.bzl", "objc_library")
load("//swiftpkg/internal:generate_modulemap.bzl", "generate_modulemap")

bzlformat_pkg(name = "bzlformat")

generate_modulemap(
    name = "Foo_modulemap",
    module_name = "Foo",
    public_hdrs = ["Foo.h"],
    uses = [
        "SimpleCore",
    ],
    visibility = ["//swiftpkg/tests/generate_modulemap_tests:__subpackages__"],
)

objc_library(
    name = "Foo",
    srcs = ["Foo.m"],
    hdrs = ["Foo.h"],
    copts = [
        # Not sure why I had to add this manually. This should be added when
        # enable_modules is True.
        "-fmodules",
    ],
    enable_modules = True,
    # module_name = "Foo",
    module_map = ":Foo_modulemap",
    visibility = ["//swiftpkg/tests/generate_modulemap_tests:__subpackages__"],
    deps = [
        "//swiftpkg/tests/generate_modulemap_tests/SimpleCore",
    ],
)
